<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Bienvenido a Moodvent</title>
  <link rel="stylesheet" href="/css/registro.css" />
</head>
<div class="registro-container">
  <div class="left-panel"></div>
  <div class="right-panel">
    <h1>¡Bienvenido a Moodvent!</h1>
    <h2>Cuéntanos un poco sobre ti</h2>

    <% if (error) { %>
    <p style="color: red"><%= error %></p>
    <% } %>

    <form action="/usuarios/registro" method="POST">
      <div>
        <label for="nombre">Nombre:</label>
        <input
          type="text"
          id="nombre"
          name="nombre"
          value="<%= datos.nombre || '' %>"
        />
        <%= helpers.error(errores, 'nombre') %>
      </div>

      <div>
        <label for="apellido">Apellido:</label>
        <input
          type="text"
          id="apellido"
          name="apellido"
          value="<%= datos.apellido || '' %>"
        />
        <%= helpers.error(errores, 'apellido') %>
      </div>

      <div>
        <label for="edad">Edad:</label>
        <input
          type="number"
          id="edad"
          name="edad"
          value="<%= datos.edad || '' %>"
        />
        <%= helpers.error(errores, 'edad') %>
      </div>

      <div>
        <label for="email">Correo:</label>
        <input
          type="email"
          id="email"
          name="email"
          value="<%= datos.email || '' %>"
        />
        <%= helpers.error(errores, 'email') %>
      </div>

      <div>
        <label for="username">Usuario:</label>
        <input
          type="text"
          id="username"
          name="username"
          value="<%= datos.username || '' %>"
        />
        <%= helpers.error(errores, 'username') %>
      </div>

      <div>
        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" />
        <%= helpers.error(errores, 'password') %>
      </div>

      <button type="submit">Registrarse</button>
    </form>

    <p class="login-link">
      ¿Ya tienes cuenta? <a href="/usuarios/login">Inicia sesión</a>
    </p>
  </div>
</div>
