
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title> Listado de Sugerencias y Feedbacks</title>
  <link rel="stylesheet" href="/css/styles.css" /> <!-- I created a separate one called tableinfo.css but i am not able to make the layoutwork with it -->
</head>

<table class="feedback-table">
  <thead>
    <tr>
      <th>#</th>
      <th>Tipo</th>
      <th>Texto</th>
    </tr>
  </thead>
  <tbody>
    <% if (datos.length === 0) { %>
      <tr>
        <td colspan="3">No hay datos </td>
      </tr>
    <% } else { %>
      <% datos.forEach((item, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= item.tipo %></td>
          <td><%= item.texto %></td>
          <td>
            <form action="/contenido/eliminar-sugerencia/<%= item.id %>" method="POST" style="display:inline;">
              <button class="btn-eliminar" type="submit">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>

<div style="text-align: center; margin-top: 20px;">
  <a href="/contenido/admin" class="btn-eventos">Volver al Panel Admin</a>
</div>
