    </div>


    

    <section class="configuracion-section">
      <h2 class="events-title">Configuraci√≥n</h2>
      <div class="config-grid">
    
        <!-- Suggestion System -->
        <form class="config-box" action="/contenido/guardar-sugerencia" method="POST">
          <h3>Sistema de Sugerencias</h3>
          <textarea
            name="sugerencia"
            placeholder="Agregar o modificar el sistema de sugerencias..."
            required
          ></textarea>
          <button type="submit" class="btn-eventos">Guardar cambios</button>
          <a href="/contenido/tableinfo" class="btn-eventos" style="margin-left: 10px;">Ver sugerencias</a>
        </form>

        <!-- Feedback System -->
        <form class="config-box" action="/contenido/guardar-feedback" method="POST">
          <h3>Sistema de Feedback</h3>
          <textarea
            name="feedback"
            placeholder="Agregar o modificar el sistema de feedback..."
            required
          ></textarea>
          <button type="submit" class="btn-eventos">Guardar cambios</button>
          <a href="/contenido/tableinfo" class="btn-eventos" style="margin-left: 10px;">Ver feedbacks</a>
        </form>
    
      </div>
    </section>
    
