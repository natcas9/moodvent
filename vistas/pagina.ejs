<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>

  <body>
    <% const ocultarTodo = (contenido === "paginas/login" || contenido ===
    "paginas/registro"); const ocultarNavbarFooter = (contenido ===
    "paginas/crearEventos" || contenido === "paginas/modificarEvento"); %> <% if
    (!ocultarTodo && !ocultarNavbarFooter) { %> <%-
    include('./partials/navbar.ejs') %> <% } %>

    <main>
      <article><%- include(contenido) %></article>

      <% if (getAndClearFlash && getAndClearFlash()) { %>
      <dialog open class="flash-dialog" id="flashModal">
        <p><%= getAndClearFlash() %></p>
        <form method="dialog">
          <button>OK</button>
        </form>
      </dialog>

      <script>
        setTimeout(() => {
          const dialog = document.getElementById("flashModal");
          if (dialog) dialog.close();
        }, 4000);
      </script>
      <% } %>
    </main>

    <% if (!ocultarTodo && !ocultarNavbarFooter) { %>
    <footer><%- include('./partials/pie.ejs') %></footer>
    <% } %>
  </body>
</html>
